{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "build",
        "node_modules",
    ]
}